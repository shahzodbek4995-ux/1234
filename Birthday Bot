name: Birthday Bot

on:
  # Har kuni Toshkent vaqti bilan soat 10:40 da ishga tushadi
  schedule:
    - cron: "40 3 * * *" # UTC 10:40 = Toshkent 10:40
  workflow_dispatch: # Qo'lda ham ishga tushirish imkoniyati

jobs:
  run-bot:
    runs-on: ubuntu-latest

    steps:
      - name: Kodni klonlash
        uses: actions/checkout@v4

      - name: Python o'rnatish
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Kerakli kutubxonalarni o'rnatish
        run: |
          pip install --upgrade pip
          pip install pandas python-telegram-bot==20.3

      - name: Botni ishga tushirish
        run: python bot.py
